<resources>
    <declare-styleable name="AngleIndicator">
        <attr name="aiShowAngleArc" format="boolean" />
        <attr name="aiShowAnglePie" format="boolean" />
        <attr name="aiShowDegreeSign" format="boolean" />
        <attr name="aiShowDirection" format="boolean" />
        <attr name="aiShowZeroLine" format="boolean" />
        <attr name="aiZeroLineWidth" format="float" />
        <attr name="aiCurrentValue" format="float" />
        <attr name="aiCircleLightColorRatio" format="float" />
        <attr name="aiCircleDarkColorRatio" format="float" />
        <attr name="aiArcPieColor" format="color" />
        <attr name="aiArrowColor" format="color" />
        <attr name="aiTextColor" format="color" />
        <attr name="aiCircleColor" format="color" />
        <attr name="aiZeroLineColor" format="color" />
        <attr name="aiZeroLinePosition" format="enum">
            <enum name="East" value="0"/>
            <enum name="North" value="90"/>
            <enum name="West" value="180"/>
            <enum name="South" value="270"/>
        </attr>
    </declare-styleable>
</resources>
